#include<Wire.h>
#include <U8g2lib.h>
U8G2_SH1106_128X64_NONAME_F_HW_I2C display(U8G2_R0, U8X8_PIN_NONE);
int motion = 2; 
void setup() {
  Serial.begin(9600);
  display.begin();
  pinMode(motion, INPUT);
}

void loop() {
  int motionread = digitalRead(motion);

  if (motionread == HIGH) {
    display.clearBuffer();
    display.setFont(u8g2_font_ncenB08_tr);  // Set font
    display.setCursor(0, 15);
    display.print("Motion Detected");
    display.sendBuffer();
  } else {
    display.clearBuffer();
    display.setFont(u8g2_font_ncenB08_tr);  // Set font
    display.setCursor(0, 15);
    display.print("NO Motion");
    display.sendBuffer();
  }

  delay(500);  
}
